echo "Sourcing .bash_aliases"

# ls
alias ls='ls --color -h --group-directories-first'
alias ll='ls -lap'
alias lt='ls -laprt'

# move around
alias vf='cd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# dir shortcuts
alias ws='cd $workspace'

# git
alias gc='git commit'
alias gs='git status'
alias gd='git diff'
alias ga='git add'
alias gac='git add .;git commit -m ' # git add and commit all
alias gcl='git clone'
alias gco='git checkout'
alias gl='git log'
alias gln='git log --graph --pretty=format:"%C(auto)%h%C(auto)%d %s %C(dim white)(%aN, %ar)"'
alias gp='git pull --rebase --autostash'

# build
alias mci='mvn clean install'
alias mcist='mvn clean install -DskipTests -T C1'

# sudo
alias apt-get='sudo apt-get'
alias apt-cache='sudo apt-cache'

# ssh
alias dojo4='ssh dojo4'
alias dojo5='ssh dojo5'

alias nautilus='nautilus --no-desktop&'
